<% if notice %>
    <%= javascript_tag "$.notify({ message: '#{notice}' }, { type: 'success', 
    	placement: { from: 'top', align: 'center' } } );" %>
<% end %>

<% if alert %>
    <script>
        $.notify( { message: '#{alert}' }, { type: 'danger', 
    	placement: { from: 'top', align: 'center' }  } );
    </script>
<% end %>